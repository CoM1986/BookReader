<Page
    x:Class="BookReader.AppShell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BookReader"
    xmlns:vm="using:BookReader.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:BookReader.Views"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" >
        <Grid.RowDefinitions>
            <RowDefinition Height="48"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='1' x:Name="MenuStates">
                <VisualState x:ConnectionId='2' x:Name="Wide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1280" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="HamburgerSplitView.DisplayMode" Value="Inline" />
                        <Setter Target="HamburgerSplitView.IsPaneOpen" Value="True" />
                        <Setter Target="TogglePaneButton.IsEnabled" Value="False" />
                        <Setter Target="TogglePaneButton.Opacity" Value="0" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='3' x:Name="Medium">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="800" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="HamburgerSplitView.DisplayMode" Value="CompactOverlay" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='4' x:Name="Narrow" />
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        
        <RelativePanel Grid.Row="0">
            <ToggleButton x:ConnectionId='7' x:Name="TogglePaneButton"
                          IsChecked="{Binding IsPaneOpen, ElementName=HamburgerSplitView, Mode=TwoWay}"
                          Style="{StaticResource SplitViewTogglePaneButtonStyle}"
                          TabIndex="1" 
                          RelativePanel.AlignLeftWithPanel="True"/>
        </RelativePanel>
        <SplitView x:ConnectionId='5' Name="HamburgerSplitView" 
                   Style="{StaticResource MenuSplitViewStyle}"
                   Grid.Row="1">
            <SplitView.Pane>
                <views:MenuView></views:MenuView>
            </SplitView.Pane>
            <SplitView.Content>
                <Frame x:ConnectionId='6' Name="PageContent"/>
            </SplitView.Content>
        </SplitView>

    </Grid>
</Page>

